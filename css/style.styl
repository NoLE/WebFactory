@import 'normalize.styl'
@import 'icon.styl'
@import 'nib'
body
	background-color #DDD
	font-family Josefin Sans
	
// Header

.Header
	background-color #273B47
	height 150px
	width 100%
	&-Containerlogo
		margin 0
		display inline-block
		float left
	&-logo
		width 150px
		
// ICONOS SOLICIALES

.Social-list
	margin 0 .6em 0 0
.Social-item
	margin-top 7.5em 
	display inline-block
	float right	
.Social-icon
	color white
	text-decoration none
	font-size 1.3em
	padding .1em
	
// Menu responsive

.button-Containermenu
	padding-top 0.5em
	padding-left 1.2em
	background-color black

.button-menu
	color white
	font-size 1.5em
	text-decoration none
.Menu
	display block
	background-color black	
	&-list
		margin 0
		padding 0
	&-item
		list-style none
		text-align center
	&-link
		font-family Josefin Sans
		text-decoration none
		color white
		padding 1em
		display block
		&:hover
			background-color #273B47
			transition .4s linear
.mostrar
	display none
// Video //
.Video
	&-article
		text-align center
	&-title
		font-size 1.5em
		font-family Josefin Sans
		font-weight bold
	&-iframe
		width 300px
		height 230px
		

// Trabajo
.Work
	&-article
		margin-right 1em
		margin-left .2em
		margin-bottom 5em
		display block
		text-align center
	&-title
		font-family Josefin Sans
	&-imageContainer
		margin 0
	&-img
		width 307px
		height 90px
	&-description
		font-family Josefin Sans	

//FOOTER
.Footer
	background-color #2F2F2F
	text-align center
	&-autor
		color #8b8c8d
		margin 0
		padding 3em 0
		&-link
			text-decoration none
			color white	
						
// Pantallas grandes
// @media screen and (min-width: 320px)
