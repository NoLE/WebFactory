@media screen and (min-width: 1066px)
	.Social-icon
		font-size 1.6em
	.mostrar
		display block
	.button-Containermenu
		display none
	.Menu
		padding 0
		&-list
			text-align center
			padding-left 0
			 margin-right 10em
		&-item
			display inline-block
			padding auto
			margin auto
		&-link
			padding 1em
	.Video

		&-iframe
			width 560px
			height 400px
	.Work
		&-article
			display inline-block
			width 30%
			margin-right 1em
			margin-left 1em
		&-img
			margin 3px
			transform scale(1,1)
			transition-timing-function ease-out
			transition-duration 250ms
			width 350px
			height auto
			&:hover
				margin 0
				border 3px solid black
				transform scale(1.12,1.12)
				transition-timing-function ease-out
				transition-duration 100ms

			
	